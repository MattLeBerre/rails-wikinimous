<div>
  <h1>Articles </h1>
  <p>Find me in app/views/articles/index.html.erb</p>
</div>

<div>
  <%= link_to "create article", new_path, class: 'btn btn-primary' %>
</div>

<div class="container">
  <% @articles.each do |article|%>
    <div class="row">
      <div class="col-xs-12">
        <%= link_to article.title, article_path(article) %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
      <%= link_to "Edit", edit_article_path(article), class: 'btn btn-primary' %>
      </div>
      <div class="col-xs-6">
        <%= link_to "Delete", article_path(article),class: 'btn btn-danger' , method: :delete,
      data: { confirm: "Are you sure?" } %>
      </div>
    </div>
    </div>
  <%end%>
</div>
